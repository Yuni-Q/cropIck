{
	"name": "next-with-typescript",
	"version": "1.0.0",
	"main": "server.js",
	"scripts": {
		"dev": "nodemon",
		"build": "ANALYZE=false NODE_ENV=production next build",
		"start": "ANALYZE=false NODE_ENV=production node -r esm -r ts-node/register ./server.local.ts",
		"predeloy": "git pull && npm install && npm run build",
		"deploy": "NODE_ENV=production pm2 start ts-node -- -P tsconfig.server.json ./server.local.ts",
		"export": "npm run build && next export",
		"type-check": "tsc",
		"lint": "concurrently \"npm run lint:ts\" \"npm run lint:style\"",
		"lint:es": "eslint --ext .ts --ext .tsx . --fix --quiet",
		"lint:style": "stylelint \"./**/*.{scss,css}\" --fix",
		"prettier": "prettier --write --config ./.prettierrc './**/*.{ts,tsx}'",
		"make:token": "web-push generate-vapid-keys",
		"watch": "jest --watchAll"
	},
	"dependencies": {
		"@ant-design/icons": "^4.2.1",
		"@types/next-redux-saga": "^3.0.2",
		"@types/react-helmet": "^5.0.14",
		"@types/react-redux": "^7.1.5",
		"@types/redux-actions": "^2.6.1",
		"@types/styled-components": "^4.4.1",
		"antd": "^4.3.0",
		"axios": "^0.19.2",
		"cookie-parser": "^1.4.5",
		"cross-env": "^7.0.2",
		"dotenv": "^8.2.0",
		"dotenv-webpack": "^2.0.0",
		"express": "^4.17.1",
		"faker": "^4.1.0",
		"immer": "^7.0.1",
		"isomorphic-unfetch": "3.0.0",
		"moment": "^2.24.0",
		"morgan": "^1.9.1",
		"next": "^9.4.4",
		"next-redux-wrapper": "^6.0.1",
		"next-routes": "^1.4.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-helmet": "^5.2.1",
		"react-redux": "^7.2.0",
		"react-slick": "^0.26.1",
		"redux": "^4.0.5",
		"redux-actions": "^2.6.5",
		"redux-devtools-extension": "^2.13.8",
		"redux-saga": "^1.1.3",
		"styled-components": "^5.1.1",
		"ts-node": "^9.0.0",
		"url-loader": "^3.0.0"
	},
	"devDependencies": {
		"@next/bundle-analyzer": "^9.4.4",
		"@testing-library/jest-dom": "^5.11.6",
		"@testing-library/react": "^11.2.2",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.9",
		"@types/jest-plugin-context": "^2.9.4",
		"@types/morgan": "^1.9.2",
		"@types/node": "^12.7.8",
		"@types/react": "^16.9.3",
		"@types/react-dom": "^16.9.1",
		"@typescript-eslint/eslint-plugin": "^3.5.0",
		"@typescript-eslint/parser": "^3.5.0",
		"babel-eslint": "^10.1.0",
		"babel-plugin-styled-components": "^1.10.7",
		"compression-webpack-plugin": "^4.0.0",
		"eslint": "^7.2.0",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^4.0.5",
		"esm": "^3.2.25",
		"husky": "^4.2.5",
		"jest": "^26.6.3",
		"jest-plugin-context": "^2.9.0",
		"lint-staged": "^10.2.11",
		"nodemon": "^2.0.2",
		"prettier": "^2.0.5",
		"stylelint": "^13.6.1",
		"typescript": "3.6.3",
		"webpack": "^4.43.0"
	},
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix",
			"git add"
		],
		"*.{css,scss}": [
			"stylelint --fix",
			"git add"
		]
	}
}
